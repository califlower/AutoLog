<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.log.cal.autolog">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".add_bike"
            android:label="@string/title_activity_add_bike"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".per_bike_settings"
            android:label="@string/title_activity_bike_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MaintenanceActivity"
            android:label="@string/title_activity_maintenance"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
