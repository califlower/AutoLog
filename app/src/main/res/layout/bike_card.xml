<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:elevation="1dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_make"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:textSize="23sp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_model"
            android:fontFamily="sans-serif-light"
            android:textSize="23sp"
            android:layout_below="@+id/card_make"
            android:layout_marginTop="7dp"
            android:layout_alignStart="@+id/card_make" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:id="@+id/card_year"
            android:textSize="23sp"
            android:layout_below="@+id/card_model"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="20dp"
            android:layout_alignStart="@+id/card_model" />
    </RelativeLayout>

</android.support.v7.widget.CardView>