<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="2dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_expand_maintenance"
        android:transitionName="card_expand_maintenance"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"

            android:text="@string/maint_name"
            android:id="@+id/maint_name"
            android:textSize="@dimen/text_size"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"

 />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_name"
            android:layout_alignStart="@+id/maint_name"
            android:layout_marginTop="12dp"
            android:text="@string/upcoming"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/maint_upcoming"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_upcoming"
            android:layout_alignStart="@+id/maint_upcoming"
            android:layout_marginTop="8dp"

            android:text="@string/maint_interval_cost"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/maint_interval_cost"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_interval_cost"
            android:layout_alignStart="@+id/maint_upcoming"
            android:layout_marginTop="16dp"

            android:text="History"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/history"
            />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/history"
            android:layout_marginBottom="16dp"
            android:id="@+id/llpast"
            android:layout_alignStart="@+id/maint_interval_cost">


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginStart="16dp"
            android:id="@+id/divider"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/llpast"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/close"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/divider"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:tint="#9e9e9e"
            android:src="@drawable/ic_close_black_24dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@id/close"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/edit_maint"
            android:layout_below="@id/divider"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:tint="#9e9e9e"
            android:src="@drawable/ic_build_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@id/edit_maint"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/add_date"
            android:layout_below="@id/divider"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:tint="#9e9e9e"
            android:src="@drawable/ic_add_circle_outline_black_24dp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>