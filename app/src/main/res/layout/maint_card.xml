<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maint_name"
            android:id="@+id/maint_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upcoming"
            android:id="@+id/maint_upcoming"
            android:layout_below="@+id/maint_name"
            android:layout_alignStart="@+id/maint_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maint_interval_cost"
            android:id="@+id/maint_interval_cost"
            android:layout_below="@+id/maint_upcoming"
            android:layout_alignStart="@+id/maint_upcoming" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_interval_cost"
            android:layout_alignStart="@+id/maint_interval_cost">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/past" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>